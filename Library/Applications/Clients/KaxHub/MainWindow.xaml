<Window x:Class="KaxHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KaxHub"
        mc:Ignorable="d"        
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" 
        Height="1000" 
        Width="1600" 
        WindowStyle="None" 
        Background="Transparent"
        AllowsTransparency="True">
    <Grid>
        <Border Margin="15"
                Background="#FF191919"
                CornerRadius="8"
                BorderThickness="0.8"
                BorderBrush="#26A9A9A9">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="#26000000" Opacity="0.25" Direction="250"/>
            </Border.Effect>

            <!-- 内容区 -->
            <Grid x:Name="mainGrid">
                <!-- 标题栏 -->
                <Grid x:Name="titleBar"
                      Height="auto"
                      MouseDown="TitleBar_PreviewMouseDown"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- 标题 -->
                    <TextBlock Text="KaxHub"
                               VerticalAlignment="Center"
                               Margin="35,15,0,8"
                               FontSize="14"
                               Foreground="White" />
                    <!-- 窗口控制按钮 -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button Template="{DynamicResource CloseButton}" x:Name="close"
                                Content="×"
                                BorderThickness="0"
                                Width="60"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontSize="24"
                                Click="Close_Click">
                        </Button>
                    </StackPanel> 
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
