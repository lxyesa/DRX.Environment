    .ndv-messagebox-content ol {
        margin: 14px 0;
        padding-left: 20px;
    }
    
    .ndv-messagebox-content li {
        margin-bottom: 10px;
        line-height: 1.5;
        position: relative;
    }
    
    .ndv-messagebox-content ul li {
        list-style-type: none;
        padding-left: 10px;
    }
    
    .ndv-messagebox-content ul li::before {
        content: '';
        position: absolute;
        left: -12px;
        top: 10px;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--cursor-black);
    }
    
