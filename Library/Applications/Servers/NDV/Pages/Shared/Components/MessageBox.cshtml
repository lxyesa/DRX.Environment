    .ndv-messagebox-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.8rem 1.8rem;
        border: none;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
        position: relative;
        cursor: pointer;
        gap: 8px;
    }
    
    .ndv-messagebox-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .ndv-messagebox-btn-primary {
        background: var(--cursor-black);
        color: white;
    }
    
    .ndv-messagebox-btn-primary:hover {
        background: #222;
    }
    
    .ndv-messagebox-btn-secondary {
        background: var(--cursor-gray);
        color: var(--cursor-black);
    }
    
    .ndv-messagebox-btn-secondary:hover {
        background: #eaeaea;
    }
    
    .ndv-messagebox-timestamp {
        font-size: 0.85rem;
        color: #777;
        margin-top: 16px;
        background: rgba(0, 0, 0, 0.02);
        padding: 8px 12px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    
    /* 响应式调整 */
    @@media (max-width: 576px) {
        .ndv-messagebox-container {
            width: 95%;
            max-width: none;
        }
        
        .ndv-messagebox-header {
            padding: 16px 20px;
        }
        
        .ndv-messagebox-body {
            padding: 20px;
        }
        
        .ndv-messagebox-footer {
            padding: 16px 20px;
        }
        
        .ndv-messagebox-btn {
            padding: 0.7rem 1.5rem;
        }
    }
</style>