@page
@model KaxServer.Pages.Account.LoginModel
@{
    ViewData["Title"] = "登录";
}

<div class="container" style="min-height: calc(100vh - var(--nav-height)); display: flex; align-items: center; justify-content: center;">
    <div class="form-card">
        <div class="form-header">
            <h1 class="form-title">欢迎回来</h1>
            <p class="form-subtitle">登录您的账号以继续</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="Input.Username" class="form-control with-icon" placeholder="用户名或电子邮箱" required autofocus>
                </div>
                 <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-wrapper">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Input.Password" type="password" class="form-control with-icon" placeholder="密码" required>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <div class="remember-me">
                    <input asp-for="Input.RememberMe" type="checkbox" id="remember-me">
                    <label for="remember-me">记住我</label>
                </div>
                <a href="/Account/ForgotPassword" class="btn-link" style="margin-top: 0; padding: 0;">忘记密码?</a>
            </div>

            <button type="submit" class="btn-primary">立即登录</button>
            
            <div class="form-divider">
                <span>或者</span>
            </div>

            <a href="/Account/Register" class="btn-link">创建新账号</a>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .btn-primary {
            width: 100%;
            display: block;
            margin: 1rem 0;
            cursor: pointer;
        }
        
        .text-danger {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .remember-me input[type="checkbox"] {
            width: 1rem;
            height: 1rem;
            cursor: pointer;
        }

        .remember-me label {
            color: var(--text-color);
            font-size: 0.9rem;
            cursor: pointer;
            user-select: none;
        }

        .remember-me input[type="checkbox"]:checked + label {
            color: var(--accent-color);
        }
    </style>
} 