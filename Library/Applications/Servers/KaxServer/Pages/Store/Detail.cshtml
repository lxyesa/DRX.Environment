
@page
@model DetailModel
@{
    var item = Model.StoreItem;
}

<div class="mod-detail-container">
    <div class="mod-detail-header">
        <img class="mod-detail-image" src="@(string.IsNullOrWhiteSpace(item.Image) ? "https://upload.wikimedia.org/wikipedia/zh/9/94/Genshin_Impact.jpg" : item.Image)" alt="Mod图片" />
        <div class="mod-detail-info">
            <h1>@item.Title</h1>
            <div style="display:flex;align-items:center;gap:1.2rem;font-size:1.1rem;color:var(--secondary-color);margin-bottom:0.5rem;">
                <span><span class="material-icons" style="vertical-align:middle;font-size:1.1em;">download</span> @item.DownloadCount</span>
                <span><span class="material-icons" style="vertical-align:middle;font-size:1.1em;">star</span> @item.Rating</span>
            </div>
            <p style="color:var(--secondary-color);font-size:1.05rem;">@item.Description</p>
        </div>
    </div>
    <div class="mod-detail-content">
        <h2>详细介绍</h2>
        <div style="margin:0.8rem;color:#ddd;font-size:1.05rem;white-space:pre-line;">@item.StoreItemDetails?.Content
        </div>
    </div>
    
    <div class="mod-price-list">
    @foreach (var price in item.StoreItemPrices)
    {
        <div class="steam-buy-bar">
            <div class="steam-buy-title">购买 @price.Title</div>
            <div class="steam-buy-actions">
                <div class="steam-buy-combo">
                    <span class="steam-buy-price">
                        <span class="material-icons" style="font-size:1.1em;vertical-align:middle;margin-right:0.15em;margin-top:0.1em;">monetization_on</span>@price.Price
                    </span>
                    @{
                        var priceIdx = item.StoreItemPrices.IndexOf(price);
                        var isOwned = Model.OwnStatus != null && Model.OwnStatus.Count > priceIdx && Model.OwnStatus[priceIdx];
                        var isBalanceError = ViewData.ModelState.Values.SelectMany(v => v.Errors).Any(e => e.ErrorMessage.Contains("余额不足"));
                    }
                    <form method="post" asp-page-handler="Buy">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <input type="hidden" name="priceIndex" value="@priceIdx" />
                        @if (isOwned)
                        {
                            <input type="hidden" name="disabled" value="true" />
                        }
                        <button type="submit"
                                class="btn-primary @(isBalanceError ? "buy-error" : "")"
                                @(isOwned ? "disabled=\"disabled\"" : "")>
                            @(isOwned ? "已拥有" : (isBalanceError ? "余额不足" : "购买"))
                        </button>
                        @if (isBalanceError)
                        {
                            <script>
                                setTimeout(function() {
                                    document.querySelectorAll('.steam-buy-btn.buy-error').forEach(function(btn){
                                        btn.classList.remove('buy-error');
                                        btn.innerText = '购买';
                                    });
                                }, 3000);
                            </script>
                        }
                    </form>
                </div>
            </div>
        </div>
    }
    </div>

@functions {
    public string GetDurationUnitText(StoreItemDurationUnit unit)
    {
        return unit switch
        {
            StoreItemDurationUnit.Day => "天",
            StoreItemDurationUnit.Week => "周",
            StoreItemDurationUnit.Month => "月",
            StoreItemDurationUnit.Year => "年",
            _ => ""
        };
    }
}
</div>

<style>
    .mod-detail-container {
        max-width: 900px;
        margin: 2.5rem auto 2rem auto;
        background: var(--bg-color);
        border-radius: 18px;
        box-shadow: var(--card-shadow);
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        color: #fff;
    }
    .mod-detail-header {
        display: flex;
        gap: 2.5rem;
        align-items: stretch;
        margin-bottom: 2.2rem;
    }
    .mod-detail-image {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 16px;
        border: 1.5px solid #333;
        background: #232323;
    }
    .mod-detail-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }
    .mod-detail-info h1 {
        font-size: 2.1rem;
        font-weight: 700;
        margin: 0 0 0.7rem 0;
        color: #fff;
    }
    .mod-detail-content {
        margin-top: 1.5rem;
        padding: 1.5rem 1.2rem 1.2rem 1.2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
    }

    .steam-buy-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-radius: 8px;
        margin: 1.2rem 0 0.7rem 0;
        padding: 0.7rem 1.2rem 0.7rem 1.2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        min-height: 48px;
    }
    .steam-buy-title {
        color: #e6f0fa;
        font-size: 1.18rem;
        font-weight: 500;
        letter-spacing: 0.01em;
        flex: 1;
        margin-right: 1.2rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .steam-buy-actions {
        display: flex;
        align-items: center;
    }

    .steam-buy-combo {
        display: flex;
        align-items: center;
        border-radius: 4px;
        flex-direction: row;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: center;
    }
    .steam-buy-price {
        background: #201f1f;
        color: #fff;
        font-size: 1.08rem;
        font-weight: 600;
        padding: 0.5rem 1.8rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: auto;
        text-align: center;
        display: flex;
        align-items: center;
        margin-right: 5px;
        border-radius: 8px;
        height: 30px;
    }
    .btn-primary{
        border-radius: 8px;
    }

    .steam-buy-btn.buy-error {
        background: linear-gradient(90deg, #ff3b3b 0%, #d32f2f 100%) !important;
        color: #fff !important;
        box-shadow: 0 0 6px #ff3b3b;
    }
    .steam-buy-btn.buy-error:hover {
        background: linear-gradient(90deg, #ff5b5b 0%, #e64a19 100%) !important;
    }
    .steam-buy-btn:hover {
        background: linear-gradient(90deg, #8be82a 0%, #6fcf1a 100%);
        color: #fff;
    }

    .mod-detail-content h2 {
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0.8rem;
        color: #fff;
    }
</style>
