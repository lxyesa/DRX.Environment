@page
@model Web.KaxServer.Pages.Account.RegisterSuccessModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "KAX | 注册成功";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/notification.css" />
    <style>
        .notification-icon {
            color: var(--success-color, #28a745);
        }
    </style>
}

<div class="notification-section">
    <div class="notification-container">
        <div class="notification-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1 class="notification-title">注册成功！</h1>
        <p class="notification-message">
            恭喜您，<strong>@Model.Username</strong>！您的账户已成功创建。<br>
            您现在可以登录并开始探索KAX平台的所有功能。
        </p>
        <div class="notification-actions">
            <a asp-page="/Account/Login" class="btn btn-accent">立即登录</a>
        </div>
    </div>
</div> 