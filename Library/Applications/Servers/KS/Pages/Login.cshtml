@page
@model KS.Pages.LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml"; // 使用共享布局
    ViewData["Title"] = "登录 - KaxModHub";
}

<!-- 登录页面：保持与主页面一致的风格 -->
<section class="hero">
    <div class="hero-inner">
        <h1>登录到 KaxModHub</h1>
        <p class="tagline">使用您的账户登录以管理或安装模组。</p>
    </div>
</section>

<section class="features" aria-label="登录表单">
    <div class="feature" style="max-width:480px; margin:0 auto;">
        <form method="post">
            @* 显示验证摘要 *@
            <div asp-validation-summary="ModelOnly" class="validation-summary-valid" style="color:#b91c1c; margin-bottom:12px;"></div>

            <div style="margin-bottom:12px;">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="width:100%; padding:8px; margin-top:6px;" />
                <span asp-validation-for="Input.Email" class="text-danger" style="font-size:13px;"></span>
            </div>

            <div style="margin-bottom:12px;">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" type="password" class="form-control" style="width:100%; padding:8px; margin-top:6px;" />
                <span asp-validation-for="Input.Password" class="text-danger" style="font-size:13px;"></span>
            </div>

            <div style="display:flex; align-items:center; justify-content:space-between; margin-bottom:12px;">
                <div>
                    <input asp-for="Input.RememberMe" type="checkbox" id="RememberMe" />
                    <label for="RememberMe" style="margin-left:6px;">记住我</label>
                </div>
                <div>
                    <a href="/ForgotPassword" style="color:var(--muted); text-decoration:none;">忘记密码？</a>
                </div>
            </div>

            <div style="text-align:right;">
                <button type="submit" class="cta">登录</button>
            </div>
        </form>
    </div>
</section>

@* 启用客户端验证脚本（若项目包含 _ValidationScriptsPartial） *@
@await Html.PartialAsync("_ValidationScriptsPartial")